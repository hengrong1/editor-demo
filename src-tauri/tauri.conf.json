{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "editor",
    "version": "0.0.1"
  },
  "tauri": {
    "allowlist": {
      "dialog": {
        "ask": true,
        "save": true
      },
      "fs": {
        "writeFile": true
      },
      "window": {
        "close": true
      }
    },
    "windows": [
      {
        "title": "editor",
        "width": 1100,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "pro.xiaoni.editor",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "windows": {
        "webviewInstallMode": {
          "type": "skip"
        }
      }
    }
  }
}
